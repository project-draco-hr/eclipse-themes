{
  ctx.runAndTrack(new RunAndTrack(){
    @Override public boolean changed(    IEclipseContext context){
      IThemeEngine engine=(IThemeEngine)context.get(IThemeEngine.class.getCanonicalName());
      if (engine != null) {
        engine.registerResourceLocator(new JTDynamicResourceLocator());
        Debug.println("Dynamic Resource Locator is installed");
      }
      return engine == null;
    }
  }
);
}
