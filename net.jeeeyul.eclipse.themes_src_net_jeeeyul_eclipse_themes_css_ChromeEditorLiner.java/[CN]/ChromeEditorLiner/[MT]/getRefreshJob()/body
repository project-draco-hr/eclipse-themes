{
  if (refreshJob == null) {
    refreshJob=new UIJob(client.getDisplay(),"refresh"){
      @Override public IStatus runInUIThread(      IProgressMonitor monitor){
        if (client != null && !client.isDisposed()) {
          doRefresh();
        }
        return Status.OK_STATUS;
      }
    }
;
    refreshJob.setSystem(true);
  }
  return refreshJob;
}
