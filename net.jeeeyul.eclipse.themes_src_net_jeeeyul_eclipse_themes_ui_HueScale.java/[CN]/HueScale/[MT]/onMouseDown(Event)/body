{
switch (state) {
case STATE_HOVER:
    setState(STATE_DRAGGING);
  break;
default :
int offset=event.x - getGradientArea().x;
float newSelection=(offset / (float)getGradientArea().width) * 360f;
newSelection=Math.min(Math.max(0,newSelection),360f);
setSelection(newSelection);
setState(STATE_DRAGGING);
break;
}
}
